<Window x:Name="SimpleNeurotuner" x:Class="SimpleNeurotuner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleNeurotuner"
        mc:Ignorable="d"
        Title="SimpleNeurotuner" Height="261" Width="396" Loaded="SimpleNeurotuner_Loaded" Closing="SimpleNeurotuner_Closing">
    <Grid>
        <Button x:Name="btnStart_Open" Content="Open/Start" HorizontalAlignment="Center" Margin="0,125,0,0" VerticalAlignment="Top" Height="35" Width="110" Click="btnStart_Open_Click"/>
        <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Center" Margin="0,175,0,0" VerticalAlignment="Top" Height="35" Width="110" Click="btnStop_Click"/>
        <ComboBox x:Name="cmbOutput" HorizontalAlignment="Center" Margin="0,45,0,0" VerticalAlignment="Top" Width="201"/>
        <ComboBox x:Name="cmbInput" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="201" Visibility="Visible"/>
        <Label x:Name="lbSpeaker" Content="Speaker" HorizontalAlignment="Left" Margin="36,43,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbMicrophone" Content="Microphone" HorizontalAlignment="Left" Margin="16,8,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Center" Margin="0,82,0,0" VerticalAlignment="Top" Width="200"/>

    </Grid>
</Window>
