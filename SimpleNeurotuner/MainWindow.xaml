<Window x:Name="SimpleNeurotuner" x:Class="SimpleNeurotuner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleNeurotuner"
        mc:Ignorable="d"
        Title="MiniNeurotuner" Height="573" Width="569" Loaded="SimpleNeurotuner_Loaded" Closing="SimpleNeurotuner_Closing" ResizeMode="CanMinimize">
    <Window.Background>
        <ImageBrush ImageSource="/ad5ddc9e-b9a1-4d8f-9e45-b6bed5b338ca.jpg" TileMode="Tile" Stretch="Uniform"/>
    </Window.Background>
    <Grid x:Name="grid" Margin="10,0,10,0">
        <Button x:Name="btnStart_Open" Content="Open/Start" HorizontalAlignment="Center" Margin="0,140,0,0" VerticalAlignment="Top" Height="47" Width="148" Click="btnStart_Open_Click" MouseMove="btnStart_Open_MouseMove" MouseLeave="btnStart_Open_MouseLeave" FontSize="18">
            <Button.Template>
                <ControlTemplate>
                    <Border BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="1" CornerRadius="25">
                        <FocusManager.FocusedElement>
                            <Button>btnStart</Button>
                        </FocusManager.FocusedElement>
                        <Border.Background>Gainsboro</Border.Background>
                        <ContentPresenter Content="{TemplateBinding ContentControl.Content}" HorizontalAlignment="Center" VerticalAlignment="Center" ></ContentPresenter>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <Button.Style>
                <Style>
                    <Setter Property="Control.FontFamily" Value="Verdana"/>
                    <Setter Property="Control.Background" Value="Aquamarine"/>
                    <Setter Property="Control.Foreground" Value="Black"/>
                    <Setter Property="Control.Margin" Value="10"/>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Center" Margin="0,354,0,0" VerticalAlignment="Top" Height="48" Width="148" Click="btnStop_Click" MouseMove="btnStop_MouseMove" MouseLeave="btnStop_MouseLeave" FontSize="18">
            <Button.Template>
                <ControlTemplate>
                    <Border BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="1" CornerRadius="25">
                        <FocusManager.FocusedElement>
                            <Button>btnStart</Button>
                        </FocusManager.FocusedElement>
                        <Border.Background>Gainsboro</Border.Background>
                        <ContentPresenter Content="{TemplateBinding ContentControl.Content}" HorizontalAlignment="Center" VerticalAlignment="Center" ></ContentPresenter>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <Button.Style>
                <Style>
                    <Setter Property="Control.FontFamily" Value="Verdana"/>
                    <Setter Property="Control.Background" Value="Aquamarine"/>
                    <Setter Property="Control.Foreground" Value="Black"/>
                    <Setter Property="Control.Margin" Value="10"/>
                </Style>
            </Button.Style>
        </Button>
        <ComboBox x:Name="cmbOutput" HorizontalAlignment="Center" Margin="0,253,0,0" VerticalAlignment="Top" Width="200">
            <ComboBox.Style>
                <Style>
                    <Setter Property="Control.Background" Value="Gainsboro"/>
                </Style>
            </ComboBox.Style>
        </ComboBox>
        <ComboBox x:Name="cmbInput" HorizontalAlignment="Center" Margin="0,218,0,0" VerticalAlignment="Top" Width="200" Visibility="Visible">
            <ComboBox.Style>
                <Style>
                    <Setter Property="Control.Background" Value="Gainsboro"/>
                </Style>
            </ComboBox.Style>
        </ComboBox>
        <Label x:Name="lbSpeaker" Content="Speaker" HorizontalAlignment="Left" Margin="73,164,0,0" VerticalAlignment="Top" Visibility="Hidden"/>
        <Label x:Name="lbMicrophone" Content="Microphone" HorizontalAlignment="Left" Margin="53,129,0,0" VerticalAlignment="Top" Visibility="Hidden"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Center" Margin="0,290,0,0" VerticalAlignment="Top" Width="200">
            <ComboBox.Style>
                <Style>
                    <Setter Property="Control.Background" Value="Gainsboro"/>
                </Style>
            </ComboBox.Style>
        </ComboBox>
        <Menu x:Name="menu" VerticalAlignment="Top" Height="22">
            <MenuItem x:Name="Help" Header="Help" Click="MenuItem_Click"></MenuItem>
            <ComboBox x:Name="cmbLanguage" Width="40" SelectionChanged="cmbLanguage_SelectionChanged">
                <ComboBoxItem Content="en"/>
                <ComboBoxItem Content="ru"/>
            </ComboBox>
        </Menu>
        <Label x:Name="label" Content="Label" HorizontalAlignment="Left" Margin="742,354,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBox" Content="CheckBox" HorizontalAlignment="Left" Margin="443,406,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
