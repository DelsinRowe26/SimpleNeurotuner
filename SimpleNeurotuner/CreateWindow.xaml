<Window x:Class="SimpleNeurotuner.CreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleNeurotuner"
        mc:Ignorable="d"
        Title="CreateWindow" Height="83" Width="452" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="tbRecordTitle" HorizontalAlignment="Left" TextWrapping="Wrap" Text="MyRecord" VerticalAlignment="Top" Width="223" Height="21" FontSize="14" Margin="113,10,0,0"/>
        <Label x:Name="lbRecordTitle" Content="Record title" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnCreate" Content="Create" HorizontalAlignment="Left" Margin="360,11,0,0" VerticalAlignment="Top" Width="56" Click="btnCreate_Click"/>

    </Grid>
</Window>
