<Window x:Class="SimpleNeurotuner.SaveDeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleNeurotuner"
        mc:Ignorable="d"
        Title="Save/Delete Window" Height="130" Width="368" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Label x:Name="lbSaveDelete" Content="Keep your recording or delete and overwrite?" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="30,57,0,0" VerticalAlignment="Top" Height="27" Width="80" FontSize="14" Click="btnSave_Click"/>
        <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Margin="260,57,0,0" VerticalAlignment="Top" Height="27" Width="80" FontSize="14" Click="btnDelete_Click"/>

    </Grid>
</Window>
